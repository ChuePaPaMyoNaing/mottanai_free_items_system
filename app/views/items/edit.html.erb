<%= form_with(model: @item, local: true) do |f| %>
  <section class="h-100 bg-dark">
    <div class="container py-5 h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col">
          <div class="card card-registration my-4">
            <div class="row g-0">
            <h3 class="mb-5 text-uppercase">Update Item Form</h3>
              <div class="col-xl-6 d-none d-xl-block">
                <%= image_tag 'home_image2.jpg' %>
              </div>
              <div class="col-xl-6">
                <div class="card-body p-md-5 text-black">                  
                  <div class="row">
                    <div class="col-md-12 mb-4">
                      <div class="form-outline">
                        <span class="image">
                          <%= f.file_field :image %>                          
                        </span>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12 mb-4">
                      <div class="form-outline">
                        <label class="form-label" for="form3Example1m">Item name</label>
                        <%= f.text_field :name %>                        
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12 mb-4">
                      <div class="form-outline">
                        <label class="form-label" for="form3Example1m1">Description</label>
                        <%= f.text_area :description %>                        
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12 mb-4">
                      <div class="form-outline">
                        <label class="form-label" for="form3Example1m1">Uploaded_date</label>
                        <%= f.date_field :upload_date %>             
                      </div>
                    </div>
                  </div>
                  <div class="d-flex justify-content-start pt-6">
                    <%= f.submit %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>