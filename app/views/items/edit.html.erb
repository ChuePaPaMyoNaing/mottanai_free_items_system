<%= form_with(model: @item, local: true) do |f| %>
  <section class="h-100 bg-dark">
    <div class="container py-5 h-100" style="background-color: darkorange;">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col">
          <div class="card card-registration my-4">          
            <div class="row g-0" style="background-color: antiquewhite;">
            <h1 style = "margin-top: 10px; text-align: left; text-align: center;">Update Item Page</h1>
              <div style="margin-left: 52%;">
                <% if @item.errors.any? %>                
                  <ul>
                    <% @item.errors.full_messages.each do |message| %>
                      <font color="red"><li ><%= message %></li></font>
                    <% end %>
                  </ul>                
                <% end %>
              </div>
              <div class="col-xl-6 d-none d-xl-block">
              <%= image_tag 'home_image2.jpg', :alt => 'Home Image', style: 'border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;', :class => "img-fluid" %>
              </div>
              <div class="col-xl-6">
                <div class="card-body p-md-5 text-black">                  
                  <div class="row">
                    <div class="col-md-12 mb-4">
                      <div class="form-outline">
                        <span class="image">
                          <%= f.file_field :image, accept: 'image/jpeg,image/gif,image/png' %>                          
                        </span>
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12 mb-4">
                      <div class="form-outline">
                        <label class="form-label">Item name</label>
                        <%= f.text_field :name, style: 'margin-left: 50px;' %>                        
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12 mb-4">
                      <div class="form-outline">
                        <label class="form-label" style="vertical-align: top;">Description</label>
                        <%= f.text_area :description, style: 'margin-left: 45px;' %>                        
                      </div>
                    </div>
                  </div>
                  <div class="row">
                    <div class="col-md-12 mb-4">
                      <div class="form-outline">
                        <label class="form-label">Uploaded_date</label>
                        <%= f.date_field :upload_date, style: 'margin-left: 28px;' %>             
                      </div>
                    </div>
                  </div>
                  <div>
                     <%= f.hidden_field :taked, :value => 0 %>
                  </div>
                  <div class="d-flex justify-content-start pt-6">
                    <%= f.submit %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>
<script type="text/javascript">
  $('#item_image').bind('change', function() {
    var size_in_megabytes = this.files[0].size/1024/1024;
    if (size_in_megabytes > 5) {
      alert('Maximum file size is 5MB. Please choose a smaller file.');
    }
  });
</script>