<%= form_with(model: [@item, @comment], local: true) do |f| %>
  <section class="h-100 bg-dark">    
    <div class="container py-5 h-100" style="background-color: darkorange;">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col" style="margin-top: 10px">
          <div class="card card-registration my-4">          
            <div class="row g-0" style="background-color: antiquewhite; text-align: center;">
              <h3 style="margin-top: 10px; margin-bottom: 10px; font-size: 15pt;"><i class="fas fa-comment-dots"></i> Post your comment for: <%= link_to "#{@item.name}", "/items/#{@item.id}" %></h3>
                <div>
                  <% if @comment.errors.any? %>                
                    <ul>
                      <% @comment.errors.full_messages.each do |message| %>
                        <b><font color="red"><%= message %></font></b>
                      <% end %>
                    </ul>                
                  <% end %>
                </div>
                <div class="field">
                  <b><%= f.label :Description %></b><br />
                  <%= f.text_area :description, autofocus: true, autocomplete: "name", size: "40x5" %>
                </div>
                <div class="field">
                  <b><%= f.label :Post_Date %></b><br />
                  <%= f.date_field :post_date, value: Time.now.strftime("%Y-%m-%d"), min: Date.today %>
                </div>
                <div class="actions" style = "margin-top: 10px;">
                  <%= f.submit class: 'buttons' %>
                </div><br> 
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
<% end %>