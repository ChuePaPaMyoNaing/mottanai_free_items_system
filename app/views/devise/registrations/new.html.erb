<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <section class="h-100 bg-dark">    
    <div class="container py-5 h-100" style="background-color: darkorange;">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col" style="margin-top: 10px">
          <div class="card card-registration my-4">          
            <div class="row g-0" style="background-color: antiquewhite; text-align: center;">            
              <h2 style = "text-align: center;">Singn Up Page</h2>
              <div>
                <%= render "devise/shared/error_messages", resource: resource %>
              </div>
              <div class="field">
                <%= f.label :name %><br />
                <%= f.text_field :name, autofocus: true, autocomplete: "name" %>
              </div>

              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>

              <div class="field">
                <%= f.label :password %>
                <% if @minimum_password_length %>
                <em>(more than <%= @minimum_password_length %> characters)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password" %>
              </div>

              <div class="field">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password" %><br />
              </div>
              <div class="actions" style = "margin-top: 10px;">
                <%= f.submit "Register" %>
              </div><br>
              <%= render "devise/shared/links" %>
            </div> 
          </div>
        </div>
      </div>
    </div>
  </section> 
<% end %>